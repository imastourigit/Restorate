{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}
{% block content_title %}Restaurant List{% endblock %}
{% block body %}
<div class="row">
 <u><h4>    <a class="dropdown-item" href="{{ path('app_restaurant_add') }}"> + Create Restaurant</a> </h4></u>
</div>
<table class="table">
    <theader>
    <th width="20%"></th>
    <th width="20%">Restaurant</th>
    <th width="20%">City</th>
    <th width="20%">Reviews</th>
    <th width="10%"></th>
    <th width="10%"></th>
    </theader>
            <tbody>
 
            {% for restaurant in app.user.restaurants %}
            <tr>
            <td> {{ restaurant.id }} </td>
            <td> <a class="btn btn-default" href="{{ path('app_restaurant_show',{id:restaurant.id}) }}">{{ restaurant.name }} </a></td>
            <td> {{ restaurant.city.name }} </td>
            <td>{{ restaurant.reviews | length }} reviews | {{ restaurant.getAverageRating }}/10 </td>
                <td>
                <a class="btn btn-success" href="{{ path('app_restaurant_edit',{id:restaurant.id}) }}">Edit</a>  
                </td>
                <td>
                    {{ include('restaurant/_delete_form.html.twig') }}  
                </td>
            </tr>
            {% endfor %}
            </tbody>
</table>

{% endblock %}
